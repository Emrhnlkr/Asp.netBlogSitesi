<!DOCTYPE html>
<html lang="en">
<head>

    <style type="text/css">


        body {
            background-image: url('/Uploads/UyeFoto/arkafon.jpg'); /* Resim Dosyası */
        }
    </style>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Aklıma Düşenler.com </title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/css/blog-home.css" rel="stylesheet">
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <link href="~/Content/js/mvcstil.css" rel="stylesheet" />

    @Scripts.Render("~/Scripts/jquery-1.7.1.min.js")
    @Scripts.Render("~/ckeditor/ckeditor.js")
    @Scripts.Render("~/ckeditor/ckfinder/ckfinder.js")
    @Scripts.Render("~/Scripts/jquery.validate.js")
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="~/Home/Index"><b><em><font size="5" face="Georgia, Arial" color="maroon">A</font>klıma <font size="5" face="Georgia, Arial" color="maroon">D</font>üşenler</em></b></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>

                        <a href="~/Home/Hakkımızda">Hakkımızda</a>
                    </li>

                    @*<li>
                <a href="#">Services</a>
            </li>*@
                    <li>
                        <a href="~/Home/İletişim">İletişim</a>
                    </li>


                </ul>
               
                <ul class="nav navbar-nav  navbar-right top-nav">
                    

                    @if (Session["uyeid"] != null)
    {
                <li class="dropdown">

                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> @Session["kullaniciadi"].ToString() <b class="caret"></b></a>
                    <ul class="dropdown-menu">

                        <li>
                            <a href="~/Uye/Index/@Session["uyeid"]">@Session["kullaniciadi"].ToString() Profil</a>
                        </li>

                        <li>
                            <a href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                        </li>
                        @if (Convert.ToInt32(Session["yetkiid"]) == 1)
        {
                <li>
                    <a href="~/Admin/Index" target="_blank"><i class="fa fa-fw fa-gear"></i> Admin Paneli</a>
                </li>
}

                        <li class="divider"></li>
                        <li>
                            <a href="~/Uye/Logout"><i class="fa fa-fw fa-power-off"></i> Çıkış</a>
                        </li>




                    </ul>
                </li>

}
else
{

                <li>

                    <a href="~/Uye/Login">Giriş</a>
                </li>
                <li>
                    <a href="~/Uye/Create">Kayıt Ol</a>
                </li>

}
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />

            <!-- Blog Entries Column -->
            <!-- First Blog Post -->
            @RenderBody()


            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Blog Search Well -->
                <div class="well">
                    @Html.Partial("BlogAraPartial")
                    <!-- /.input-group -->
                </div>
                <!-- Blog Categories Well -->
                <div class="well">

                    @{

                    Html.RenderAction("KategoriPartial", "Home");
                    }



                </div>

                <div class="well">
                    @{Html.RenderAction("PopulerMakaleler", "Home"); }  @*//Son iki yorumu burda gösteriyor.*@
                </div>
                @*<div class="well">
                @{Html.RenderAction("SonYorumlar", "Home"); }  @*//Son iki yorumu burda gösteriyor.*@
                @*</div>*@
            </div>
        </div>
        <!-- /.row -->
       
        <!-- Footer -->


        <footer class="container pad0 margin0">
            <!-- FOOTER  -->


            <div class="hidden-xs col-md-9 text-info padTop10">

            </div>
            <div class="text-center center-block col-md-3">
                <h5> <p>Copyright &copy; @DateTime.Now.Year &bull;</p></h5>
                <a href="https://www.facebook.com/emirhan.ulker.39"><i id="social-fb" class="fa fa-facebook-square fa-4x social"></i></a>
                <a href="https://twitter.com/?lang=tr"><i id="social-tw" class="fa fa-twitter-square fa-4x social"></i></a>
                <a href="https://mail.google.com/"><i id="social-gp" class="fa fa-google-plus-square fa-4x social"></i></a>
                @*<a href="#"><i id="social-em" class="fa fa-envelope-square fa-4x social"></i></a>*@  
                
            </div>

            <div class="row">
                <div class="col-lg-12">
                  
                </div>
                <!-- /.col-lg-12 -->
            </div>

        </footer>
       
       
    </div>
    <!-- /.container -->
    <!-- jQuery -->
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
    <script src="~/Content/js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/js/bootstrap.min.js"></script>

</body>
</html>
